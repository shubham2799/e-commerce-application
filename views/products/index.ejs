<%- include("../partials/header") %>

<div class="container">
	<div class="jumbotron my-5">
		<h2>Welcome to Apni Dukaan</h2>
	</div>

	<div class="row">
		<% products.forEach(function(product){ %>
			<div class="col-6 col-lg-3">
				<div class="card my-3">
					<a href="/products/<%= product._id %>">
						<div class="resp-img pro-ind" style="background-image:url('<%= product.image %>')"></div>
					</a>
					<div class="card-body">
						<a href="/products/<%= product._id %>">
							<div class="card-title a"><%= product.name.substring(0,50) %><% if(product.name.length>50) { %> ... <% } %></div>
						</a>
						<h5>
							₹<%= product.price %>
							<span class="mrp mx-2">₹<%= product.mrp %></span>
							<span class="disc"><%= product.disc_perc %>% off</span>
						</h5>

						<h6>
							<% if(currentUser && currentUser.cart.items.some(function(cartItem){ 
								  return cartItem.product._id.equals(product._id); 
							   })) { %>
										<a href="/cart"><button class="btn btn-sm btn-primary">Go to cart</button></a>
							<% } else { %>
										<a href="/cart/new/<%= product._id %>/index"><button class="btn btn-sm btn-primary">Add to cart</button></a>
							<% } %>
							<span class="disc ml-3">Save ₹<%= product.discount %></span>
						</h6>						
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include("../partials/footer") %>